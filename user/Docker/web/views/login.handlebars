<div class="form-container position-relative shadow">
  <form action="/users/login" method="post" class="needs-validation" novalidate>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="row mb-4">
      <div class="col-2 ml-2">
        <small class="text-danger pl-2">Required*</small>
      </div>
      <div class="col-8">
        <h4 class="text-center font-weight-bold">Login</h4>
      </div>
    </div>
    <!--Display error message-->
    {{> message}}
    <!--From input-->
    <div class="form-group row ml-1 mr-4 justify-content-end">
      <label for="email" class="col-3 col-form-label text-right">Email*</label>
      <input type="email" name="email" id="email" class="col-9 form-control" value="{{user.email}}"
        pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 4}$" required>
      <div class="valid-feedback col-9 p-0">
        Looks Great!
      </div>
      <div class="invalid-feedback col-9 p-0">
        Your Email should be of the form mintek.co.za
      </div>
    </div>
    <div class="form-group row ml-1 mr-4 justify-content-end">
      <label for="password" class="col-3 col-form-label text-right">Password</label>
      <input type="password" name="password" id="password" class="col-9 form-control" value="{{user.password}}"
        pattern="^\S{6,12}$" required>
      <div class="valid-feedback col-9 p-0">
        Looks Great!
      </div>
      <div class="invalid-feedback col-9 p-0">
        Your Password should have 6 - 12 CharactersÔºÅ
      </div>
    </div>
    <div class="row ml-1 mr-4 mt-0 justify-content-end">
      <div class="col-9 p-0 mt-0">
        <input type="submit" value="Log in" class="btn btn-info login-button">
        
      </div>
    </div>
    <hr class="mx-4">
    <div class="row ml-1 mr-4 mt-0  justify-content-end">
      <div class="col-3 col-form-label"></div>
      <div class="col-9 p-0 mt-0 d-flex justify-content-between align-items-center">
        <a href="/users/register" class="btn btn-sm btn-warning half-column"><i
            class=""></i>Register</a>
        <a href="/users/reset" class="btn btn-sm btn-danger half-column"><i ></i>Reset Password</a>
      </div>
    </div>
  </form>
</div>